<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:background="@drawable/edittextview_style"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:gravity="center">
		
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp">
        <TextView 
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textSize="18dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康扫描"
            android:textSize="18dp"/>
        <ImageView 
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"/>
        <ImageView 
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"/>
        <ImageView 
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"/>
        <ImageView 
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"/>
        <ImageView 
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"/>
        
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView 
            android:id="@+id/tvscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="15sp"
            android:layout_marginTop="8dp"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView 
            android:id="@+id/bushu"
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="步数"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>
         <TextView 
            android:id="@+id/tvsteps"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
          <TextView 
            android:id="@+id/tvstepsPercent"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="心率"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>
         <TextView 
            android:id="@+id/tvheartRate"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
          <TextView 
            android:id="@+id/tvheartRatePercent"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="卡路里"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>
         <TextView 
            android:id="@+id/tvkaloria"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
	    	android:textColor="#5cc5ff"
            android:textSize="18dp"
            android:gravity="center"/>
          <TextView 
            android:id="@+id/tvkaloriaPercent"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="深睡时间"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>
         <TextView 
            android:id="@+id/tvdeepSleep"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
          <TextView 
            android:id="@+id/tvdeepSleepPercent"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
        </LinearLayout>
        
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="运动时间"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>
         <TextView 
            android:id="@+id/tvsportTime"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
          <TextView 
            android:id="@+id/tvsportTimePercent"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
	    	android:textColor="#5cc5ff"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">
            <TextView 
            android:id="@+id/bushu"
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="高压"
            android:textSize="18dp"
            android:gravity="right"/>
         <TextView 
            android:id="@+id/tvbloodPressure"
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
	    	android:textColor="#5cc5ff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
          <TextView 
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:textColor="#03ab35"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">
            <TextView 
            android:id="@+id/bushu"
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="低压"
            android:textSize="18dp"
            android:gravity="right"/>
         <TextView 
            android:id="@+id/tvweight"
            android:layout_width="0sp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
	    	android:textColor="#5cc5ff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
          <TextView 
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:textColor="#03ab35"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">
            <TextView 
            android:id="@+id/bushu"
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="血糖餐前"
            android:textSize="18dp"
            android:gravity="right"/>
         <TextView 
            android:id="@+id/tvbloodSugar"
            android:layout_width="0sp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
	    	android:textColor="#5cc5ff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
          <TextView 
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:textColor="#03ab35"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">
            <TextView 
            android:id="@+id/bushu"
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="血糖餐后"
            android:textSize="18dp"
            android:gravity="right"/>
         <TextView 
            android:id="@+id/tvbloodSugarAfter"
            android:layout_width="0sp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
	    	android:textColor="#5cc5ff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
          <TextView 
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:textColor="#03ab35"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>
        </LinearLayout>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/textview_style">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="健康小贴士"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/tvhealthScanTips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="健            康               小              贴              士"
            android:textSize="18sp"/>
    </LinearLayout>
   </LinearLayout>

</LinearLayout>
